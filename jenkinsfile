pipeline {
    agent any
          
    
    tools{nodejs "node"}

    stages{

        stage('Cloning Git'){
            steps{
                git branch: "master"
                    url: 'https://github.com/AbdelrazakAltounji/kubernetes_test_1.git'
            }
        }
    
        stage('Install dependencies'){
            steps{
                sh 'npm install'
                
                
            }
        }
    
        stage('test'){
            steps{
                sh 'SELENIUM_HUB=http://selenium-hub.selenium.svc.cluster.local:4444/wd/hub npm run test tests/google'

                
        
        


            }
        }
    }




}